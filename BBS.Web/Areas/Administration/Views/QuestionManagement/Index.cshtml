@model IEnumerable<BBS.Models.Models.Question>


@{
    ViewData["Title"] = "IndexAsync";
}

<h1 class="d-flex justify-content-center opacity-90 text-muted mt-4">Question Management</h1>

<form action="javascript:void(0);">
    <div class="row">
        <div class="form-group col-md-8">
            <input class="form-control border-info" name="questionText" placeholder="Search Question" />
        </div>
        <div class="form-group col-md-3 ml-5">
            <input type="submit" asp-action="Index" value="Search" class="btn btn-dark" />
            <input type="submit" asp-action="Index" value="Reset" class="btn btn-dark" />
        </div>
    </div>
</form>

<div class="row">
    <div class="col-md-7">
        <p>@ViewData["DepositTypeId"]</p>
    </div>
    <div class="col-md-5">
        <p class="text-md-center ">@Model.Count() Questions found</p>
    </div>
</div>

<table class="table">
    <thead>
        <tr>

            <th>
                Questions
            </th>
            <th>
                Actions
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
         {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    <a class="btn btn-dark" asp-action="Update" asp-controller="QuestionManagement" asp-route-id="@item.Id">Update</a>
                    <a class="btn btn-dark" asp-action="Delete" asp-controller="QuestionManagement" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
         }
    </tbody>

</table>
<div class="form-group row">

    <div class="col-md-3">
        <h3>Add new question </h3>
    </div>
    <div class="col-md-7">
        <form asp-action="Create" method="post">
            <input class="w-100 col-md-8 " placeholder="Question" name="question" />
            <input type="submit" class="btn btn-secondary ml-2" value="Create" />
        </form>
    </div>

</div>




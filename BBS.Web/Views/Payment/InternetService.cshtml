@model BBS.Models.Models.Service

@{
    ViewData["Title"] = "InternetService";
}

<h1>Internet Payment</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="InternetServicePayment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label">Choose internet provider: </label>
                <select asp-for="Id" class="form-control" asp-items="ViewBag.viewAllService"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@model BBS.Models.Models.Transactions
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CompleteTransaction">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h6>Internet Provider: </h6>
            <h5>@ViewData["ServiceProviderName"]</h5>
            <br />
            <div class="form-group">
                <label asp-for="SenderCardId" class="control-label">From Card: </label>
                <select asp-for="SenderCardId" class="form-control" asp-items="ViewBag.CardList"></select>
            </div>

            <input asp-for="SenderAccountId" type="hidden" value="1" />
            <input asp-for="ReceiverAccountId" type="hidden" value="@ViewData["ReceiverAccountId"]" />
            <input asp-for="ServiceId" type="hidden" value="@ViewData["ServiceId"]" />

            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonalAccountId" class="control-label"></label>
                <input asp-for="PersonalAccountId" class="form-control" />
                <span asp-validation-for="PersonalAccountId" class="text-danger"></span>
            </div>
            <input asp-for="Date" type="hidden" value="@DateTime.Now" />
            <input name="serviceTypeId" type="hidden" value="@ViewBag.serviceTypeId">
            <input name="serviceName" type="hidden" value="@ViewBag.serviceName">
            <div class="form-group">
                <a style="padding-left:50px; padding-right:50px;" class="btn btn-secondary" asp-action="Index" asp-controller="Payment">Return</a>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

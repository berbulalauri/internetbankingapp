@using Microsoft.AspNetCore.Identity
@inject SignInManager<BBS.Models.Models.User> signInManager

<meta name="msapplication-TileImage" content="~/images/favicondirectory/ms-icon-144x144.png">
<meta name="theme-color" content="#ffffff">
<style>
    .container {
        max-width: 1240px !important;
    }
</style>
<nav class="navbar custom-navbar fixed-top navbar-expand-lg navbar-light bg-light" role="navigation">
    <div class="container">
        
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarToggler">
            @if (signInManager.IsSignedIn(User))
            {
                @if (User.IsInRole(BBS.Web.Constants.Roles.Admin))
                {
                    <a class="navbar-brand" asp-area="Administration" asp-controller="Dashboard" asp-action="Index"><img id="ctl00_XXX" src="/images/bbs_logo_sm_2.png" style="border: 0;float: left;width: 62px;margin-right: 20px;"></a>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a is-active class="nav-link text-dark" asp-area="Administration" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a is-active class="nav-link text-dark" asp-area="Administration" asp-controller="DepositTypeManagment" asp-action="Index">Deposit Managment</a>
                        </li>
                        <li class="nav-item">
                            <a is-active class="nav-link text-dark" asp-area="Administration" asp-controller="LoanTypeManagment" asp-action="Index">Loan Managment</a>
                        </li>
                        <li class="nav-item">
                            <a is-active class="nav-link text-dark" asp-area="Administration" asp-controller="CustomLoan" asp-action="Index">Custom Loans</a>
                        </li>
                        <li class="nav-item">
                            <a is-active class="nav-link text-dark" asp-area="Administration" asp-controller="CardRequest" asp-action="Index">Card Requests</a>
                        </li>
                        <li class="nav-item">
                            <a is-active class="nav-link text-dark" asp-area="Administration" asp-controller="QuestionManagement" asp-action="Index">Question Managment</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item dropdown dmenu">
                            <a class="nav-link dropdown-toggle pt-2" data-toggle="dropdown">
                                <span class="mt-3"> Hello, @User.Identity.Name </span>
                                <img src="~/images/user.svg" class="profile-img img-fluid" />
                            </a>
                            <div class="dropdown-menu sm-menu">
                                <form class="dropdown-item" method="post" asp-area="" asp-controller="UserAccount" asp-action="Logout">
                                    <button type="submit" class="nav-link btn pl-0 text-dark">Log Out <i class="fas fa-sign-out-alt"></i></button>
                                </form>
                            </div>
                        </li>
                    </ul>
                }
                else
                {
                <a class="navbar-brand" asp-area="" asp-controller="Cards" asp-action="Index"><img id="ctl00_XXX" src="/images/bbs_logo_sm_2.png" style="border: 0;float: left;width: 62px;margin-right: 20px;"></a>
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a is-active class="nav-link text-dark" asp-area="" asp-controller="Payment" asp-action="Index">Payments and Transfers</a>
                        </li>
                        <li class="nav-item">
                            <a is-active class="nav-link text-dark" asp-area="" asp-controller="Cards" asp-action="Index">Accounts and Cards</a>
                        </li>
                        <li class="nav-item">
                            <a is-active class="nav-link text-dark" asp-area="" asp-controller="Deposit" asp-action="Index">Deposit</a>
                        </li>
                        <li class="nav-item">
                            <a is-active class="nav-link text-dark" asp-area="" asp-controller="Loan" asp-action="ChooseLoan">Loans</a>
                        </li>
                        <li class="nav-item">
                            <a is-active class="nav-link text-dark" asp-area="" asp-controller="LoanRequest" asp-action="GetAllUsersLoan">My Loan Requests</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item dropdown dmenu">
                            <a class="nav-link dropdown-toggle pt-2" data-toggle="dropdown">
                                <span class="mt-3"> Hello, @User.Identity.Name </span>
                                <img src="~/images/user.svg" class="profile-img img-fluid" />
                            </a>
                            <div class="dropdown-menu sm-menu">
                                <a is-active class="dropdown-item nav-link" asp-area="" asp-controller="UserAccount" asp-action="Update">Settings <i class="fas fa-user-cog"></i></a>
                                <form class="dropdown-item nav-link" method="post" asp-area="" asp-controller="UserAccount" asp-action="Logout">
                                    <button type="submit" class="nav-link btn pl-0 text-dark">Log Out <i class="fas fa-sign-out-alt"></i></button>
                                </form>
                            </div>
                        </li>
                    </ul>
                }
            }
            else
            {
                <ul class="navbar-nav ml-auto">

                    <li class="nav-item">
                        <a is-active asp-action="FirstStepSignUp" asp-controller="UserAccount" class="nav-link">Sign Up <i class="fas fa-user-plus"></i></a>
                    </li>
                    <li class="nav-item">
                        <a is-active asp-action="Login" asp-controller="UserAccount" class="nav-link">Log In <i class="fas fa-user-lock"></i></a>
                    </li>
                </ul>
            }
        </div>
    </div>
</nav>
